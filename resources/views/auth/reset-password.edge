<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>ETC Client Portal</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/welcome.css">
  <script src="/js/password.js"></script>
</head>
<body>
<section>
  <div class="logo"></div>
  <div class="title"></div>
  <div class="subtitle">
    <p>Exchange Traded Concepts Client Portal</p>
    <h2>Reset Password</h2>
    <!--<p>
      Don't know where to start? Read the <a href="https://adonisjs.com/docs">documentation</a>.
    </p>
    -->
  </div>

  <div>
    @if (flashMessages.has('notification'))
    <div class="notification is-danger is-light">
      {{ flashMessages.get('notification') }}
    </div>
    @endif
    <form class="form" action="/reset-password" method="POST">
      {{ csrfField() }}
      <input type="hidden" name="token" value="{{token}}">
      <div class="form-group">

        <input
          value="{{email}}"
          type="text"
          class="input form-control {{ flashMessages.get('errors.password') ? 'is-danger' : '' }}"
          name="email"
          readonly >
      </div>
      <div class="form-group">
       <input
          type="password"
          id="password"
          class="input form-control {{ flashMessages.get('errors.password') ? 'is-danger' : '' }}"
          name="password"
          placeholder="Password" >
       </div>
      @if (flashMessages.has('errors.password'))
      <p class="help is-danger">
        {{ flashMessages.get('errors.password') }}
      </p>
      @endif
  <div>
    <div class="form-group">
      <input
        id="password_confirmation"
        type="password"
        class="input form-control {{ flashMessages.get('errors.password_confirmation') ? 'is-danger' : '' }}"
        name="password_confirmation"
        placeholder="Confirm Password"  onBlur="confirmPassword()">
    </div>
    <div class="input-group-addon" onclick="showPass()"  style="margin-bottom: 8px;">
      <i class="fa fa-eye-slash" aria-hidden="true" title="Show Password" >Show Password</i>
    </div>
    @if (flashMessages.has('errors.password_confirmation'))
    <p class="help is-danger">
      {{ flashMessages.get('errors.password_confirmation') }}
    </p>
    @endif
  </div>
      <div class="alert-danger" id="error_display" style="display: none;padding: 10px; background-color: #FFFFFF;margin:10px;">
        Passwords do not match
      </div>
      <div class="form-group" style="text-align: center">
        <button class="form-control" type="submit" style="align-content: center" id="register_submit">Submit</button>
      </div>
    </form>
    <center><a href="/">Back</a></center>
  </div>
</section>
</body>
</html>
